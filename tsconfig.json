{
  "compilerOptions": {
    "target": "ESNext", // Target latest ECMAScript version for best compatibility with Node 22
    "module": "ESNext", // Use ESNext for module system
    "moduleResolution": "node", // Node.js module resolution strategy
    "experimentalDecorators": true, // Enable experimental support for decorators
    "emitDecoratorMetadata": true, // Emit design-type metadata for decorated declarations
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES modules
    "skipLibCheck": true, // Skips type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure file names use consistent casing
    "outDir": "./dist", // Redirect output structure to the dist directory
    "rootDir": "./src", // Base directory to resolve non-relative module names
    "isolatedModules": true, // Ensure each file is treated as a module
    "noEmit": false, // Don't emit compiled files
    "sourceMap": true, // Generate source maps for debugging
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
